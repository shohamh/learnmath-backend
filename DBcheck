import sqlite3

from flask import Flask, _app_ctx_stack

DATABASE = 'db.db'

app = Flask(__name__)


def get_db():
    db = getattr(_app_ctx_stack.top, '_database', None)
    if db is None:
        db = _app_ctx_stack.top._database = sqlite3.connect(DATABASE)

    db.row_factory = sqlite3.Row
    return db


@app.teardown_appcontext
def close_connection(exception):
    db = getattr(_app_ctx_stack.top, '_database', None)
    if db is not None:
        db.close()


def make_dicts(cursor, row):
    return dict((cursor.description[idx][0], value)
                for idx, value in enumerate(row))


def query_db(query, args=(), one=False):
    cur = get_db().execute(query, args)
    rv = cur.fetchall()
    cur.close()
    return (rv[0] if rv else None) if one else rv


@app.route('/DBcheck', methods=["GET"])
def DBcheck():
    for user in query_db('SELECT * FROM users'):
        print(user['user_id'] + '|' + user['username'] + '|' + user['password'] + '|' + user['email'] + '|' + user[
            'registration_date'] + '|' + user['last_login_date'] + '\n')
